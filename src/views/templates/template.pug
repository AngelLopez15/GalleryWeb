include ../config/config
<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.4.2/css/all.css")
    link(rel="stylesheet", href="css/styles.css")
    title Gallery
  body
    header#header.header
      a(href="/")
        img(src="./images/logotipo.png", alt="logotipo").logo
      //-para poner divs no es necesario poner la etiqueta 
      #topbar.topbar
        .topbar__icon(data-type='login')
          i.fas.fa-user
          span Login
        .topbar__icon(data-type='register')
          i.fas.fa-user-plus
          span Register
        .toggle-menu
          #toggle-menu.toggle-menu__icon
            .first-bar
            .second-bar
            .third-bar
    #sidebar.sidebar
      block menu
    main.main
      block title
      block main
    include ../includes/login-modal
    include ../includes/register-modal
    block scripts
    script(src="js/scripts-min.js")